<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Type:"
            android:paddingBottom="10dp"
            android:textColor="@color/black"/>



        <Spinner
            android:id="@+id/spinner1"
            android:theme="@style/mySpinnerItemStyle"
            android:popupBackground="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textColor="@color/black"/>



        <Spinner
            android:id="@+id/spinner2"
            android:theme="@style/mySpinnerItemStyle"
            android:popupBackground="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave From:"
            android:paddingBottom="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:inputType="textMultiLine"
            android:lines="2"
            android:minLines="1"
            android:hint="20/02/2021"
            android:textColorHint="@color/black"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave To:"
            android:paddingBottom="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:inputType="textMultiLine"
            android:lines="2"
            android:minLines="1"
            android:hint="20/02/2021"
            android:textColorHint="@color/black"            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time from:"
            android:paddingBottom="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:inputType="textMultiLine"
            android:lines="2"
            android:minLines="1"
            android:hint="11:00 AM"
            android:textColorHint="@color/black"            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time To:"
            android:paddingBottom="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:inputType="textMultiLine"
            android:lines="2"
            android:minLines="1"
            android:hint="4:00 PM"
            android:textColorHint="@color/black"            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:paddingBottom="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:inputType="textMultiLine"
        android:lines="2"
        android:minLines="1"
            android:hint="title"
        android:gravity="top|left"
        android:maxLines="10"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:paddingBottom="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:inputType="textMultiLine"
            android:lines="2"
            android:minLines="3"
            android:textColor="@color/black"
            android:hint="Description"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supervisor Email:"
            android:paddingBottom="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/password"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textfields"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/login"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_black_button"
                android:text="Apply"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    </ScrollView>




</RelativeLayout>